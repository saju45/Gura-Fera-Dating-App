<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/matchProfile"
            android:layout_margin="5dp"
            app:civ_border_color="@color/border_Color"
            android:src="@drawable/programmer"
            android:layout_width="70dp"
            app:civ_border_width="1dp"
            android:layout_height="70dp"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/matchName"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:text="Shanawaj hossain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginEnd="10dp"
                        android:gravity="right"
                        android:textColor="@color/grey_light"
                        android:id="@+id/matchTimeStamp"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:text="time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>


            </RelativeLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <TextView
                    android:id="@+id/lastMessage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:text="last message"
                    android:textSize="16sp"
                    android:textColor="@color/grey_light"
                    />

                <ImageView
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:id="@+id/notification_dot"
                    android:src="@drawable/dot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/matchId"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/needId"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/giveId"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="0dp"/>


        <TextView
            android:id="@+id/budgetId"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/profileId"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="0dp"/>




    </LinearLayout>

    <View
        android:alpha="128"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</LinearLayout>